<main>
    <form>
        <h1>{{ header }}</h1>      

        {{#each inputs }}
            {{{ this }}}
        {{/each}}  

        {{#if errors.active }}
            <div class="error">{{ errors.text }}</div>            
        {{/if}}

        {{#each buttons }}
            {{{ this }}}
        {{/each}}

        {{#if link }}
            {{{ link }}}
        {{/if}}

    </form>
</main>
