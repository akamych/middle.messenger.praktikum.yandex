<li class="user" data-user-id={{ id }}>
    <div class="avatar">
        {{#if avatar }}
            <img src="{{ avatar }}" />
        {{/if}}        
    </div>

    <b>{{ display_name }}</b>
    <i>{{ first_name }} {{ second_name }}</i>
    <b>{{ inActiveChat }}</b>

    {{#if inActiveChat }}
        {{{ removeUser }}}
    {{else}}
        {{{ addUser }}}
    {{/if}}
</li>
