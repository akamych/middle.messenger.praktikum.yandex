{{#each messages }}

    {{#if attachments.img }}
        <div class="message img" data-my="{{ byYou }}" data-unread="{{ unread }}">
            <img src="{{ img }}" />
        </div>
    {{/if}}

    <div class="message" data-my="{{ byYou }}" data-unread="{{ unread }}">
        {{ text }}
    </div>

{{/each }}