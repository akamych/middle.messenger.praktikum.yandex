{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2016",
        "declaration": false,
        "module": "CommonJS",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./src/utils/types", 
            "./node_modules/@types"
        ],
    },
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
}
