<li class="feedChat" data-chat-id={{ id }}>
    {{#if avatar }}
        <img class="avatar" src="{{ avatar }}" alt={{ avatarAlt }} />
    {{else}}
        <div class="avatar"></div>
    {{/if}}
    <b>{{ title }}</b>
    <p>
        {{#if last_message }}
            {{ last_message.content }}
        {{/if}}
    </p>
    {{#if unread_count }}
        <span class="new">{{ unread_count }}</span>
    {{/if}}
</li>
